<div class="results-block">
  <%= render 'layouts/messages' %>
</div>

<% if @users %>
  <div class="card card-header results-block">
    <table class="col-md-12">
      <tbody>


    <% @users.each do |friend| %>
    <tr>
      <td><strong>Name: </strong><%= friend.full_name %></td>
      <td><strong>Email: </strong><%= friend.email %></td>
      <td><strong>Actions: </strong><%= link_to "View Profile", user_path(friend), class: "btn btn-sm btn-success" %></td>
      <% if current_user.already_friends?(friend.id) %>
        <td><span class="badge badge-secondary"> Already following</span></td>
      <% else %>
        <td><%= link_to 'Start following', friendships_path(friend: friend), class: 'btn btn-sm btn-success', method: :post %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>

</table>
  </div>
<% end %>
